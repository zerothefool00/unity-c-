    void Update()
    {
        this.transform.Translate(Vector3.left * 3f * Time.deltaTime);
        if (this.transform.position.x < -70f)
            this.transform.position = new Vector3(this.transform.position.x+140f,
                                                    this.transform.position.y,
                                                    this.transform.position.z);
    }
}
